<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="CustomFilteringForRadGridView.CustomFilter.HierarchyFilter"
	d:DesignWidth="234.5" d:DesignHeight="95.5" Background="White" BorderBrush="#FFD6D0D0" BorderThickness="1">
	<Border x:Name="LayoutRoot" Background="#E4FFFFFF" BorderBrush="#FF818181" BorderThickness="2" CornerRadius="1">
		<Grid Background="Transparent">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<RadioButton Content="Division" d:LayoutOverrides="Width, Height" Grid.Row="2" GroupName="Hierarchy" IsChecked="{Binding IsDivisionFilterActive, Mode=TwoWay}"/>
			<RadioButton Content="Region" d:LayoutOverrides="Width, Height" Grid.Row="1" GroupName="Hierarchy" IsChecked="{Binding IsRegionFilterActive, Mode=TwoWay}"/>
			<RadioButton Content="National" d:LayoutOverrides="Width, Height" GroupName="Hierarchy"/>
		</Grid>
	</Border>
</UserControl>